<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="Iteration and Zeydel" Height="500" Width="800" MinWidth="500" MinHeight="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Image VerticalAlignment="Top" HorizontalAlignment="Center" MaxHeight="205" MaxWidth="700" Source="/img.png"/>

        <Grid Grid.Row="1">
            <Button Name="simpleIterationBtn" Content="Проста ітерація" Click="simpleIterationBtn_Click" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Height="53" Width="150" Margin="10,0,0,0"/>
            <Button Name="zeydelMethodBtn" Content="Ітерація Зейделя" Click="zeydelMethodBtn_Click" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Top" Height="53" Width="150" Margin="0,0,10,0"/>

            <Label Content="Результат:" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Name="resultLbl" Content="" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0"/>
        </Grid>
    </Grid>
</Window>